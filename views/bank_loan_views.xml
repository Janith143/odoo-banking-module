<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Loan Form View -->
        <record id="view_bank_loan_form" model="ir.ui.view">
            <field name="name">bank.loan.form</field>
            <field name="model">bank.loan</field>
            <field name="arch" type="xml">
                <form string="Bank Loan">
                    <header>
                        <button name="action_submit" string="Submit Application" type="object" 
                                class="oe_highlight" invisible="status != 'draft'"/>
                        <button name="action_approve" string="Approve" type="object" 
                                class="oe_highlight" invisible="status != 'submitted'" 
                                groups="odoo_bank.group_bank_manager"/>
                        <button name="action_reject" string="Reject" type="object" 
                                invisible="status != 'submitted'" 
                                groups="odoo_bank.group_bank_manager"/>
                        <button name="action_disburse" string="Disburse" type="object" 
                                class="oe_highlight" invisible="status != 'approved'" 
                                groups="odoo_bank.group_bank_manager"/>
                        <field name="status" widget="statusbar" 
                               statusbar_visible="draft,submitted,approved,disbursed,active,closed"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1><field name="loan_number" readonly="1"/></h1>
                        </div>
                        <group>
                            <group string="Loan Information">
                                <field name="customer_id" options="{'no_create': True}"/>
                                <field name="account_id" options="{'no_create': True}"/>
                                <field name="loan_type"/>
                                <field name="application_date"/>
                            </group>
                            <group string="Amount">
                                <field name="currency_id" invisible="1"/>
                                <field name="requested_amount" widget="monetary"/>
                                <field name="approved_amount" widget="monetary" 
                                       readonly="status not in ['submitted', 'approved']"/>
                                <field name="disbursed_amount" widget="monetary" readonly="1"/>
                                <field name="outstanding_amount" widget="monetary" readonly="1"/>
                            </group>
                        </group>
                        <group>
                            <group string="Terms">
                                <field name="interest_rate"/>
                                <field name="tenure_months"/>
                                <field name="emi_amount" widget="monetary" readonly="1"/>
                            </group>
                            <group string="Dates">
                                <field name="approval_date" readonly="1"/>
                                <field name="disbursement_date" readonly="1"/>
                                <field name="first_emi_date" readonly="1"/>
                                <field name="maturity_date" readonly="1"/>
                            </group>
                        </group>
                        <group string="Collateral">
                            <group>
                                <field name="collateral_type"/>
                                <field name="collateral_value" widget="monetary"/>
                            </group>
                            <group>
                                <field name="collateral_description" placeholder="Collateral details..."/>
                            </group>
                        </group>
                        <group string="Repayment Status" invisible="status not in ['active', 'disbursed', 'closed']">
                            <group>
                                <field name="total_paid" widget="monetary" readonly="1"/>
                                <field name="emi_paid_count" readonly="1"/>
                            </group>
                            <group>
                                <field name="emi_pending_count" readonly="1"/>
                            </group>
                        </group>
                        <group invisible="status != 'submitted'">
                            <field name="rejection_reason" placeholder="Reason for rejection..."/>
                        </group>
                        <group invisible="status not in ['approved', 'disbursed', 'active', 'closed']">
                            <field name="approved_by" readonly="1"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        
        <!-- Loan Tree View -->
        <record id="view_bank_loan_tree" model="ir.ui.view">
            <field name="name">bank.loan.tree</field>
            <field name="model">bank.loan</field>
            <field name="arch" type="xml">
                <list string="Loans">
                    <field name="loan_number"/>
                    <field name="customer_id"/>
                    <field name="loan_type"/>
                    <field name="approved_amount" widget="monetary"/>
                    <field name="outstanding_amount" widget="monetary"/>
                    <field name="currency_id" column_invisible="1"/>
                    <field name="interest_rate"/>
                    <field name="tenure_months"/>
                    <field name="emi_amount" widget="monetary"/>
                    <field name="status" widget="badge" 
                           decoration-success="status == 'active'"
                           decoration-warning="status == 'submitted'"
                           decoration-info="status == 'approved'"
                           decoration-muted="status == 'closed'"/>
                </list>
            </field>
        </record>
        
        <!-- Loan Search View -->
        <record id="view_bank_loan_search" model="ir.ui.view">
            <field name="name">bank.loan.search</field>
            <field name="model">bank.loan</field>
            <field name="arch" type="xml">
                <search string="Search Loans">
                    <field name="loan_number"/>
                    <field name="customer_id"/>
                    <filter string="Pending Approval" name="pending" 
                            domain="[('status', '=', 'submitted')]"/>
                    <filter string="Active" name="active" 
                            domain="[('status', '=', 'active')]"/>
                    <filter string="Closed" name="closed" 
                            domain="[('status', '=', 'closed')]"/>
                    <group>
                        <filter string="Loan Type" name="group_type" 
                                context="{'group_by': 'loan_type'}"/>
                        <filter string="Status" name="group_status" 
                                context="{'group_by': 'status'}"/>
                        <filter string="Customer" name="group_customer" 
                                context="{'group_by': 'customer_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- Loan Action -->
        <record id="action_bank_loan" model="ir.actions.act_window">
            <field name="name">Loans</field>
            <field name="res_model">bank.loan</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new loan application
                </p>
                <p>
                    Manage loan applications, approvals, and repayments.
                </p>
            </field>
        </record>
        
    </data>
</odoo>
