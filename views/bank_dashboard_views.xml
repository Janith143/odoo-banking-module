<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Dashboard Kanban View (Admin) -->
        <record id="view_bank_dashboard_kanban" model="ir.ui.view">
            <field name="name">bank.dashboard.kanban</field>
            <field name="model">bank.account</field>
            <field name="arch" type="xml">
                <kanban create="false" class="oe_background_grey o_kanban_dashboard o_account_kanban">
                    <field name="id"/>
                    <field name="account_number"/>
                    <field name="account_name"/>
                    <field name="balance"/>
                    <field name="currency_id"/>
                    <field name="status"/>
                    <field name="account_type"/>
                    <field name="color"/>
                    <templates>
                        <t t-name="card">
                            <div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_card oe_kanban_global_click">
                                <div class="o_dropdown_kanban dropdown">
                                    <a class="dropdown-toggle o-no-caret btn" role="button" data-bs-toggle="dropdown" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                        <span class="fa fa-ellipsis-v"/>
                                    </a>
                                    <div class="dropdown-menu" role="menu">
                                        <ul class="oe_kanban_colorpicker" data-field="color"/>
                                    </div>
                                </div>
                                <div class="o_kanban_card_header">
                                    <div class="o_kanban_card_header_title">
                                        <div class="o_primary">
                                            <a type="object" name="action_view_transactions"><field name="account_name"/></a>
                                        </div>
                                        <div class="o_secondary text-muted">
                                            <field name="account_number"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="container o_kanban_card_content">
                                    <div class="row mb-3">
                                        <div class="col-12">
                                            <h3 class="mb-0">
                                                <field name="balance" widget="monetary"/>
                                            </h3>
                                            <small class="text-muted"><field name="account_type"/></small>
                                        </div>
                                    </div>
                                    <div class="row mt-2">
                                        <div class="col-6">
                                            <button class="btn btn-primary btn-sm" type="object" name="action_view_transactions">
                                                <i class="fa fa-list-ul me-1"/> Transactions
                                            </button>
                                        </div>
                                        <div class="col-6 text-end">
                                            <field name="status" widget="badge" 
                                                   decoration-success="status == 'active'"
                                                   decoration-warning="status == 'frozen'"
                                                   decoration-muted="status == 'closed'"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        
        <!-- Audit Log Tree View -->
        <record id="view_bank_audit_log_tree" model="ir.ui.view">
            <field name="name">bank.audit.log.tree</field>
            <field name="model">bank.audit.log</field>
            <field name="arch" type="xml">
                <list string="Audit Logs" create="false" edit="false" delete="false">
                    <field name="timestamp"/>
                    <field name="user_name"/>
                    <field name="action"/>
                    <field name="model_name"/>
                    <field name="description"/>
                    <field name="severity" widget="badge" 
                           decoration-info="severity == 'info'"
                           decoration-warning="severity == 'warning'"
                           decoration-danger="severity == 'error'"/>
                </list>
            </field>
        </record>
        
        <!-- Audit Log Search View -->
        <record id="view_bank_audit_log_search" model="ir.ui.view">
            <field name="name">bank.audit.log.search</field>
            <field name="model">bank.audit.log</field>
            <field name="arch" type="xml">
                <search string="Search Audit Logs">
                    <field name="user_name"/>
                    <field name="model_name"/>
                    <field name="description"/>
                    <!--
                    <filter string="Today" name="today" 
                            domain="[('timestamp', '&gt;=', context_today())]"/>
                    <filter string="This Week" name="this_week" 
                            domain="[('timestamp', '&gt;=', context_today() - relativedelta(days=7))]"/>
                    -->
                    <filter string="Errors" name="errors" 
                            domain="[('severity', 'in', ['error', 'critical'])]"/>
                    <group>
                        <filter string="User" name="group_user" 
                                context="{'group_by': 'user_id'}"/>
                        <filter string="Action" name="group_action" 
                                context="{'group_by': 'action'}"/>
                        <filter string="Model" name="group_model" 
                                context="{'group_by': 'model_name'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- Audit Log Action -->
        <record id="action_bank_audit_log" model="ir.actions.act_window">
            <field name="name">Audit Logs</field>
            <field name="res_model">bank.audit.log</field>
            <field name="view_mode">list</field>
            <field name="context">{}</field>
        </record>
        
        <!-- Dashboard Action -->
        <record id="action_bank_dashboard" model="ir.actions.act_window">
            <field name="name">Banking Dashboard</field>
            <field name="res_model">bank.account</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="context">{'search_default_active': 1}</field>
        </record>
        
    </data>
</odoo>
