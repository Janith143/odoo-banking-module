<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Sequences -->
        <record id="seq_bank_customer" model="ir.sequence">
            <field name="name">Bank Customer Sequence</field>
            <field name="code">bank.customer</field>
            <field name="prefix">CUST</field>
            <field name="padding">6</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
        </record>
        
        <record id="seq_bank_transaction" model="ir.sequence">
            <field name="name">Bank Transaction Sequence</field>
            <field name="code">bank.transaction</field>
            <field name="prefix">TXN</field>
            <field name="padding">8</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
        </record>
        
        <record id="seq_bank_transfer" model="ir.sequence">
            <field name="name">Bank Transfer Sequence</field>
            <field name="code">bank.transfer</field>
            <field name="prefix">TRF</field>
            <field name="padding">8</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
        </record>
        
        <record id="seq_bank_loan" model="ir.sequence">
            <field name="name">Bank Loan Sequence</field>
            <field name="code">bank.loan</field>
            <field name="prefix">LOAN</field>
            <field name="padding">6</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
        </record>
        
        <record id="seq_bank_fixed_deposit" model="ir.sequence">
            <field name="name">Fixed Deposit Sequence</field>
            <field name="code">bank.fixed.deposit</field>
            <field name="prefix">FD</field>
            <field name="padding">6</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
        </record>
        
        <!-- Cron Jobs -->
        <record id="cron_check_fd_maturity" model="ir.cron">
            <field name="name">Check FD Maturity</field>
            <field name="model_id" ref="model_bank_fixed_deposit"/>
            <field name="state">code</field>
            <field name="code">model.cron_check_maturity()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active" eval="True"/>
        </record>
        
        <record id="cron_retry_failed_notifications" model="ir.cron">
            <field name="name">Retry Failed Notifications</field>
            <field name="model_id" ref="model_bank_notification"/>
            <field name="state">code</field>
            <field name="code">model.cron_retry_failed()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="active" eval="True"/>
        </record>
        
        <record id="group_bank_admin" model="res.groups">
            <field name="user_ids" eval="[(4, ref('base.user_admin'))]"/> 
        </record>

    </data>
</odoo>
