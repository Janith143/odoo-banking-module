<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Customer Form View -->
        <record id="view_bank_customer_form" model="ir.ui.view">
            <field name="name">bank.customer.form</field>
            <field name="model">bank.customer</field>
            <field name="arch" type="xml">
                <form string="Bank Customer">
                    <header>
                        <button name="action_submit_kyc" string="Submit KYC" type="object" 
                                class="oe_highlight" invisible="kyc_status != 'draft'"/>
                        <button name="action_approve_kyc" string="Approve KYC" type="object" 
                                class="oe_highlight" invisible="kyc_status != 'submitted'" 
                                groups="odoo_bank.group_bank_manager"/>
                        <button name="action_reject_kyc" string="Reject KYC" type="object" 
                                invisible="kyc_status != 'submitted'" 
                                groups="odoo_bank.group_bank_manager"/>
                        <field name="kyc_status" widget="statusbar" 
                               statusbar_visible="draft,submitted,approved"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_accounts" type="object" 
                                    class="oe_stat_button" icon="fa-credit-card">
                                <field name="account_count" widget="statbutton" string="Accounts"/>
                            </button>
                        </div>
                        <field name="photo" widget="image" class="oe_avatar"/>
                        <div class="oe_title">
                            <h1><field name="full_name" placeholder="Customer Name"/></h1>
                            <h3><field name="customer_id" readonly="1"/></h3>
                        </div>
                        <group>
                            <group string="Personal Information">
                                <field name="date_of_birth"/>
                                <field name="gender"/>
                                <field name="email"/>
                                <field name="phone"/>
                                <field name="mobile"/>
                            </group>
                            <group string="KYC Information">
                                <field name="id_type"/>
                                <field name="id_number"/>
                                <field name="id_expiry_date"/>
                                <field name="risk_level"/>
                                <field name="kyc_verified_by" readonly="1"/>
                                <field name="kyc_verified_date" readonly="1"/>
                            </group>
                        </group>
                        <group string="Address">
                            <group>
                                <field name="street"/>
                                <field name="street2"/>
                                <field name="city"/>
                            </group>
                            <group>
                                <field name="state_id"/>
                                <field name="zip"/>
                                <field name="country_id"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="KYC Documents">
                                <group>
                                    <group>
                                        <field name="id_document" filename="id_document_filename"/>
                                        <field name="id_document_filename" invisible="1"/>
                                    </group>
                                    <group>
                                        <field name="address_proof" filename="address_proof_filename"/>
                                        <field name="address_proof_filename" invisible="1"/>
                                    </group>
                                </group>
                                <group invisible="kyc_status != 'rejected'">
                                    <field name="kyc_rejection_reason" placeholder="Reason for rejection..."/>
                                </group>
                            </page>
                            <page string="Other Information">
                                <group>
                                    <field name="user_id"/>
                                    <field name="active"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        
        <!-- Customer Tree View -->
        <record id="view_bank_customer_tree" model="ir.ui.view">
            <field name="name">bank.customer.tree</field>
            <field name="model">bank.customer</field>
            <field name="arch" type="xml">
                <list string="Bank Customers">
                    <field name="customer_id"/>
                    <field name="full_name"/>
                    <field name="email"/>
                    <field name="phone"/>
                    <field name="kyc_status" widget="badge" 
                           decoration-success="kyc_status == 'approved'"
                           decoration-warning="kyc_status == 'submitted'"
                           decoration-danger="kyc_status == 'rejected'"/>
                    <field name="risk_level" widget="badge"/>
                    <field name="account_count"/>
                </list>
            </field>
        </record>
        
        <!-- Customer Search View -->
        <record id="view_bank_customer_search" model="ir.ui.view">
            <field name="name">bank.customer.search</field>
            <field name="model">bank.customer</field>
            <field name="arch" type="xml">
                <search string="Search Customers">
                    <field name="customer_id"/>
                    <field name="full_name"/>
                    <field name="email"/>
                    <field name="phone"/>
                    <field name="id_number"/>
                    <filter string="KYC Pending" name="kyc_pending" 
                            domain="[('kyc_status', 'in', ['draft', 'submitted'])]"/>
                    <filter string="KYC Approved" name="kyc_approved" 
                            domain="[('kyc_status', '=', 'approved')]"/>
                    <filter string="High Risk" name="high_risk" 
                            domain="[('risk_level', '=', 'high')]"/>
                    <group>
                        <filter string="KYC Status" name="group_kyc_status" 
                                context="{'group_by': 'kyc_status'}"/>
                        <filter string="Risk Level" name="group_risk_level" 
                                context="{'group_by': 'risk_level'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- Customer Action -->
        <record id="action_bank_customer" model="ir.actions.act_window">
            <field name="name">Customers</field>
            <field name="res_model">bank.customer</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first customer
                </p>
                <p>
                    Register customer information and complete KYC verification.
                </p>
            </field>
        </record>
        
    </data>
</odoo>
