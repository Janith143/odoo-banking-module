<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Module Category -->
        <record id="module_category_banking" model="ir.module.category">
            <field name="name">Banking</field>
            <field name="sequence">10</field>
        </record>

        <!-- Privilege -->
        <record id="privilege_banking" model="res.groups.privilege">
            <field name="name">Banking Access</field>
            <field name="category_id" ref="module_category_banking"/>
        </record>

        <!-- Security Groups -->
        <record id="group_bank_customer" model="res.groups">
            <field name="name">Bank Customer</field>
            <field name="privilege_id" ref="privilege_banking"/>
        </record>
        
        <record id="group_bank_teller" model="res.groups">
            <field name="name">Bank Teller</field>
            <field name="privilege_id" ref="privilege_banking"/>
            <field name="implied_ids" eval="[(4, ref('group_bank_customer'))]"/>
        </record>
        
        <record id="group_bank_manager" model="res.groups">
            <field name="name">Bank Manager</field>
            <field name="privilege_id" ref="privilege_banking"/>
            <field name="implied_ids" eval="[(4, ref('group_bank_teller'))]"/>
        </record>
        
        <record id="group_bank_admin" model="res.groups">
            <field name="name">Bank Administrator</field>
            <field name="privilege_id" ref="privilege_banking"/>
            <field name="implied_ids" eval="[(4, ref('group_bank_manager'))]"/>
        </record>
        
        <!-- Record Rules -->
        
        <!-- Customer: Can only see their own records -->
        <record id="bank_customer_rule_customer" model="ir.rule">
            <field name="name">Customer: Own Records Only</field>
            <field name="model_id" ref="model_bank_customer"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_bank_customer'))]"/>
        </record>
        
        <!-- Manager/Admin: Can see all records -->
        <record id="bank_customer_rule_manager" model="ir.rule">
            <field name="name">Manager: All Customer Records</field>
            <field name="model_id" ref="model_bank_customer"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_bank_manager'))]"/>
        </record>
        
        <!-- Account: Customers see only their accounts -->
        <record id="bank_account_rule_customer" model="ir.rule">
            <field name="name">Customer: Own Accounts Only</field>
            <field name="model_id" ref="model_bank_account"/>
            <field name="domain_force">[('customer_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_bank_customer'))]"/>
        </record>
        
        <!-- Transaction: Customers see only their transactions -->
        <record id="bank_transaction_rule_customer" model="ir.rule">
            <field name="name">Customer: Own Transactions Only</field>
            <field name="model_id" ref="model_bank_transaction"/>
            <field name="domain_force">[('customer_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_bank_customer'))]"/>
        </record>
        
        <!-- Transfer: Customers see only their transfers -->
        <record id="bank_transfer_rule_customer" model="ir.rule">
            <field name="name">Customer: Own Transfers Only</field>
            <field name="model_id" ref="model_bank_transfer"/>
            <field name="domain_force">[('from_customer_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_bank_customer'))]"/>
        </record>
        
        <!-- Loan: Customers see only their loans -->
        <record id="bank_loan_rule_customer" model="ir.rule">
            <field name="name">Customer: Own Loans Only</field>
            <field name="model_id" ref="model_bank_loan"/>
            <field name="domain_force">[('customer_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_bank_customer'))]"/>
        </record>
        
        <!-- Fixed Deposit: Customers see only their FDs -->
        <record id="bank_fd_rule_customer" model="ir.rule">
            <field name="name">Customer: Own FDs Only</field>
            <field name="model_id" ref="model_bank_fixed_deposit"/>
            <field name="domain_force">[('customer_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_bank_customer'))]"/>
        </record>
        
        <!-- Account: Manager can see all -->
        <record id="bank_account_rule_manager" model="ir.rule">
            <field name="name">Manager: All Accounts</field>
            <field name="model_id" ref="model_bank_account"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_bank_manager'))]"/>
        </record>
        
        <!-- Transaction: Manager can see all -->
        <record id="bank_transaction_rule_manager" model="ir.rule">
            <field name="name">Manager: All Transactions</field>
            <field name="model_id" ref="model_bank_transaction"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_bank_manager'))]"/>
        </record>
        
        <!-- Transfer: Manager can see all -->
        <record id="bank_transfer_rule_manager" model="ir.rule">
            <field name="name">Manager: All Transfers</field>
            <field name="model_id" ref="model_bank_transfer"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_bank_manager'))]"/>
        </record>
        
        <!-- Loan: Manager can see all -->
        <record id="bank_loan_rule_manager" model="ir.rule">
            <field name="name">Manager: All Loans</field>
            <field name="model_id" ref="model_bank_loan"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_bank_manager'))]"/>
        </record>
        
        <!-- Fixed Deposit: Manager can see all -->
        <record id="bank_fd_rule_manager" model="ir.rule">
            <field name="name">Manager: All FDs</field>
            <field name="model_id" ref="model_bank_fixed_deposit"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_bank_manager'))]"/>
        </record>

    </data>
</odoo>
