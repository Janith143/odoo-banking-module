<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Transfer Form View -->
        <record id="view_bank_transfer_form" model="ir.ui.view">
            <field name="name">bank.transfer.form</field>
            <field name="model">bank.transfer</field>
            <field name="arch" type="xml">
                <form string="Money Transfer">
                    <header>
                        <button name="action_submit" string="Submit" type="object" 
                                class="oe_highlight" invisible="status != 'draft'"/>
                        <button name="action_approve" string="Approve" type="object" 
                                class="oe_highlight" invisible="status != 'pending'" 
                                groups="odoo_bank.group_bank_manager"/>
                        <button name="action_reject" string="Reject" type="object" 
                                invisible="status != 'pending'" 
                                groups="odoo_bank.group_bank_manager"/>
                        <button name="action_cancel" string="Cancel" type="object" 
                                invisible="status not in ['draft', 'pending']"/>
                        <field name="status" widget="statusbar" 
                               statusbar_visible="draft,pending,approved,processing,completed"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1><field name="transfer_number" readonly="1"/></h1>
                        </div>
                        <group>
                            <group string="Transfer Information">
                                <field name="transfer_date"/>
                                <field name="transfer_type"/>
                            </group>
                            <group string="Amount">
                                <field name="currency_id" invisible="1"/>
                                <field name="amount" widget="monetary"/>
                                <field name="fee" widget="monetary"/>
                                <field name="total_amount" widget="monetary"/>
                            </group>
                        </group>
                        <group string="Source">
                            <group>
                                <field name="from_account_id" options="{'no_create': True}"/>
                                <field name="from_customer_id" readonly="1"/>
                            </group>
                        </group>
                        <group string="Destination">
                            <group>
                                <field name="to_account_id" options="{'no_create': True}" 
                                       invisible="transfer_type != 'internal'"/>
                                <field name="to_customer_id" readonly="1" 
                                       invisible="transfer_type != 'internal'"/>
                                <field name="beneficiary_name" 
                                       invisible="transfer_type == 'internal'"/>
                                <field name="beneficiary_account" 
                                       invisible="transfer_type == 'internal'"/>
                            </group>
                            <group>
                                <field name="beneficiary_bank" 
                                       invisible="transfer_type == 'internal'"/>
                                <field name="beneficiary_ifsc" 
                                       invisible="transfer_type == 'internal'"/>
                            </group>
                        </group>
                        <group>
                            <field name="description" placeholder="Transfer description..."/>
                            <field name="reference"/>
                        </group>
                        <group invisible="status != 'pending'">
                            <field name="rejection_reason" placeholder="Reason for rejection..."/>
                        </group>
                        <group invisible="status != 'completed'">
                            <group>
                                <field name="approved_by" readonly="1"/>
                                <field name="approved_date" readonly="1"/>
                            </group>
                            <group>
                                <field name="debit_transaction_id" readonly="1"/>
                                <field name="credit_transaction_id" readonly="1"/>
                                <field name="gateway_reference" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        
        <!-- Transfer Tree View -->
        <record id="view_bank_transfer_tree" model="ir.ui.view">
            <field name="name">bank.transfer.tree</field>
            <field name="model">bank.transfer</field>
            <field name="arch" type="xml">
                <list string="Transfers">
                    <field name="transfer_date"/>
                    <field name="transfer_number"/>
                    <field name="from_account_id"/>
                    <field name="to_account_id"/>
                    <field name="beneficiary_name"/>
                    <field name="transfer_type"/>
                    <field name="amount" widget="monetary"/>
                    <field name="currency_id" column_invisible="1"/>
                    <field name="status" widget="badge" 
                           decoration-success="status == 'completed'"
                           decoration-warning="status == 'pending'"
                           decoration-info="status == 'processing'"
                           decoration-danger="status == 'failed'"/>
                </list>
            </field>
        </record>
        
        <!-- Transfer Search View -->
        <record id="view_bank_transfer_search" model="ir.ui.view">
            <field name="name">bank.transfer.search</field>
            <field name="model">bank.transfer</field>
            <field name="arch" type="xml">
                <search string="Search Transfers">
                    <field name="transfer_number"/>
                    <field name="from_account_id"/>
                    <field name="to_account_id"/>
                    <field name="beneficiary_name"/>
                    <filter string="Pending Approval" name="pending" 
                            domain="[('status', '=', 'pending')]"/>
                    <filter string="Completed" name="completed" 
                            domain="[('status', '=', 'completed')]"/>
                    <filter string="Internal" name="internal" 
                            domain="[('transfer_type', '=', 'internal')]"/>
                    <filter string="External" name="external" 
                            domain="[('transfer_type', '!=', 'internal')]"/>
                    <group>
                        <filter string="Transfer Type" name="group_type" 
                                context="{'group_by': 'transfer_type'}"/>
                        <filter string="Status" name="group_status" 
                                context="{'group_by': 'status'}"/>
                        <filter string="Date" name="group_date" 
                                context="{'group_by': 'transfer_date:day'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- Transfer Action -->
        <record id="action_bank_transfer" model="ir.actions.act_window">
            <field name="name">Money Transfers</field>
            <field name="res_model">bank.transfer</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new transfer
                </p>
                <p>
                    Transfer money between accounts or to external beneficiaries.
                </p>
            </field>
        </record>
        
    </data>
</odoo>
